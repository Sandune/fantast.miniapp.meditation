<!--pages/home/home.wxml-->
<view>
  <image class='music_bg' src='{{bgImg}}' mode='aspectFill'></image>
  <view class='content'>
    <view style='text-align:center;margin-top:15%;;'>{{typeTitle}}</view>
    <swiper style='width:100%;height:60%;' bindchange='changeMusic'>
      <block wx:for='{{musicData}}' wx:key="{{item.id}}">
        <swiper-item class='cover_view'>
          <image class='cover' src='{{item.image}}'></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class='control'>
    <view class='weui-flex' style='flex-direction:row;'>
      <view class='weui-flex__item'>
        <view class='control_item' bindtap='repeatStatus'>
          <image class='control_btn' src='{{repeatStatusImage}}'></image>
        </view>
      </view>
      <view class='weui-flex__item'>
        <view class='control_item' bindtap='playMusic'>
          <image class='control_btn' src='{{playStatusImage}}'></image>
        </view>
      </view>
      <view class='weui-flex__item'>
        <view class='control_item' bindtap=''>
          <image class='control_btn' src='../../images/clock.png'></image>
        </view>
      </view>
    </view>
  </view>
</view>
